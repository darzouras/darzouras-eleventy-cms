<!doctype html>
<html>
    {% include "components/head.njk" %}

    <body>
        {% include "components/header.njk" %}

        <main>
            {{ layoutContent | safe }}
        </main>

        {% include "components/footer.njk" %}

        {% for file in scripts %}
            <script src="{{ file }}"></script>
        {% endfor %}

        <script>
            if ('serviceWorker' in navigator) {
                navigator.serviceWorker
                         .register('/sw.js')
                         .then(function() {
                             console.log("Service Worker Registered");
                         })
            }
        </script>
    </body>
</html>