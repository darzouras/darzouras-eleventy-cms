<head>
    <!-- Global site tag (gtag.js) - Google Analytics -->
    <script async src="https://www.googletagmanager.com/gtag/js?id=UA-146827146-1"></script>
    <script>
    window.dataLayer = window.dataLayer || [];
    function gtag(){dataLayer.push(arguments);}
    gtag('js', new Date());

    gtag('config', 'UA-146827146-1');
    </script>

    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <title>{{ metadata.site_name }}--{{ title }}</title>

    <meta property="og:title" content="{{ metadata.site_name }}--{{ title }}" />
    {% if summary %}
        <meta property="og:description" content="{{ summary }}" />
    {% else %}
        <meta property="og:description" content="uwu" />
    {% endif %}
    <meta property="og:image" content="{{ metadata.site_url }}{{ header }}" />
    <meta property="og:locale" content="en_US" />
    {% if layout == "layouts/post.njk" %}
        <meta property="og:url" content="{{ metadata.site_url | safe }}/blog/{{title | slug }}" />
    {% else %}
        <meta property="og:url" content="{{ metadata.site_url | safe }}{{ permalink | safe }}" />
    {% endif %}

    <link rel="manifest" href="/manifest.json">
    <link rel="icon" href="/static/img/jigglypuff1.gif" type="image/x-icon">

    <script async src="https://identity.netlify.com/v1/netlify-identity-widget.js"></script>

    <link rel="stylesheet" href="/_includes/assets/css/main.css" type="text/css">
    {% for file in styles %}
        <link rel="stylesheet" href="{{ file }}" type="text/css">
    {% endfor %}
</head>
